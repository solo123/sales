<ul id="tabnav">
	<li><%= link_to '品牌列表', brands_path %></li>
	<li><%= link_to '新增品牌', new_brand_path %></li>
        <li><span>修改品牌</span></li>
</ul>
<div id="main_zone">
<% form_for(@brand) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :short_name, "缩写：" %><br />
    <%= f.text_field :short_name %>
  </p>
  <p>
    <%= f.label :brand_name, "品牌名称：" %><br />
    <%= f.text_field :brand_name %>
  </p>
  <p>
    <%= f.label :status, "状态：" %>
    <%= f.select :status, Brand::BRAND_STATUS, :prompt => "请选择..." %>
  </p>
  <p>
    <%= f.submit '保存' %>
  </p>
<% end %>
</div>