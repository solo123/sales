<% if flash[:alert] or flash[:notice] %>
<div style="position: absolute; top: 0; left: 0; text-align:center;color:white; width:100%; height: 40px; background: #000000; text-align: center; line-height: 40px; border-bottom: 1px solid #FFFFFF;">
  <% if flash[:alert] -%>
      <table>
         <tr>
            <td width="20">&nbsp;</td>
             <td><span class="ui-icon ui-icon-alert"></span></td>
           <td><strong>错误:</strong> <%= flash[:alert] %></td>
         </tr>
      </table>
<% end -%>
<% if flash[:notice] -%>
      <table>
         <tr>
            <td width="20">&nbsp;</td>
             <td><span class="ui-icon ui-icon-info"></span></td>
           <td> <%= flash[:notice] %></td>
         </tr>
      </table>


<% end -%>
    </div>
<% end %>